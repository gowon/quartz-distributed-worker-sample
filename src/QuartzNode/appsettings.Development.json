{
  "ConnectionStrings": {
    "QuartzDbContext": "Host=localhost;Port=15432;Database=quartz;Username=root;Password=password;"
  },
  "Quartz": {
    "quartz.scheduler.instanceName": "Node",
    "quartz.scheduler.instanceId": "AUTO",
    "quartz.serializer.type": "json",
    //"quartz.threadPool.maxConcurrency": 1,
    "quartz.jobStore.clustered": true,
    "quartz.jobStore.useProperties": true,
    "quartz.jobStore.type": "Quartz.Impl.AdoJobStore.JobStoreTX, Quartz",
    "quartz.jobStore.driverDelegateType": "Quartz.Impl.AdoJobStore.PostgreSQLDelegate, Quartz",
    "quartz.jobStore.dataSource": "QuartzDbContext",
    "quartz.jobStore.tablePrefix": "qrtz_",
    "quartz.dataSource.QuartzDbContext.provider": "Npgsql",
    "quartz.dataSource.QuartzDbContext.connectionStringName": "QuartzDbContext"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Debug", "Serilog.Enrichers.Span", "Serilog.Exceptions" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{MachineName} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{MachineName} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "WithExceptionDetails", "WithMachineName", "WithSpan" ]
  }
}
