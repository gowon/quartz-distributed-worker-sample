{
  "ConnectionStrings": {
    "QuartzDbContext": "Host=postgres;Port=5432;Database=quartz;Username=root;Password=password;"
  },
  "Serilog": {
    "Using": [ "Serilog.Enrichers.Span", "Serilog.Enrichers.Thread", "Serilog.Exceptions", "Serilog.Expressions", "Serilog.Formatting.Compact", "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Quartz": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{MachineName} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://loki:3100",
          "labels": [
            {
              "key": "application",
              "value": "quartznode"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "MachineName"
          ],
          "queueLimit": 10000
        }
      }
    ],
    "Enrich": [ "WithExceptionDetails", "WithMachineName", "WithSpan", "WithThreadId" ]
  }
}